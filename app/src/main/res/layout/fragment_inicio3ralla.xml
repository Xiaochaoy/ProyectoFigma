<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".inicio3rallaFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_color">

    <ImageView
        android:id="@+id/ralla3"
        android:layout_width="182dp"
        android:layout_height="162dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/tresralla"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jugar3ralla"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:textColor="#AEED00"
        android:backgroundTint="#13013C"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/ralla3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="#AEED00"
        android:backgroundTint="#13013C"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/jugar3ralla"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>