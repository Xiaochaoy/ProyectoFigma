<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".inicioCofreFragment">

    <ImageView
        android:id="@+id/cofrelogo"
        android:layout_width="182dp"
        android:layout_height="162dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/cofre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/jugarcofre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:textColor="@color/black"
        android:backgroundTint="#B19BE4"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@+id/cofrelogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/exitcofre"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:textColor="@color/black"
        android:backgroundTint="#B19BE4"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/jugarcofre"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>