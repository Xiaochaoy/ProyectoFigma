<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".juego_correrFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/layer_1"
            android:scaleType="fitXY" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:src="@drawable/layer_2" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/fondo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            scrolling_image_view:speed="18dp"
            scrolling_image_view:source="@drawable/layer_3" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/fondo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            scrolling_image_view:speed="36dp"
            scrolling_image_view:source="@drawable/layer_4" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/fondo3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            scrolling_image_view:speed="54dp"
            scrolling_image_view:source="@drawable/layer_5" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/fondo4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            scrolling_image_view:speed="90dp"
            scrolling_image_view:source="@drawable/layer_6" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/fondo5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            scrolling_image_view:speed="102dp"
            scrolling_image_view:source="@drawable/layer_7" />

        <ImageView
            android:id="@+id/personaje"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:src="@drawable/normal"/>
        <ImageView
            android:id="@+id/personaje2"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:src="@drawable/saltar"/>
        <ImageView
            android:id="@+id/personaje3"
            android:layout_width="90dp"
            android:layout_height="150dp"
            android:layout_gravity="bottom"
            android:visibility="invisible"
            android:src="@drawable/agachar"/>

        <ImageView
            android:id="@+id/saltar"
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"/>
        <ImageView
            android:id="@+id/agachar"
            android:layout_width="365dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/ganastebro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ganaste Bro"
            android:textSize="32sp"
            android:layout_marginTop="130dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:layout_gravity="center|top"/>

        <ImageView
            android:id="@+id/ganasteImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ganar"
            android:textSize="32sp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:layout_gravity="center|top"/>
        
        <ImageView
            android:id="@+id/pausa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@android:drawable/ic_media_pause" />
    </FrameLayout>

</FrameLayout>